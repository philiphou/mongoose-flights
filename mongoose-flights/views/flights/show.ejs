<%- include('../partials/header') %>

<section class="show-page-part1">
  <h1>Flight Details</h1>
  <table>
    <thead>
      <tr>
        <th>Delete?</th>
        <th>Airline</th>
        <th>Airport</th>
        <th>FlightNo</th>
        <th>Departs</th>
   
      </tr>
    </thead>
    <tbody>
         <tr>
          <form action="/flights/<%=flight._id%>?_method=DELETE" method = "POST">
            <td><button>Yes</button></td>
          </form>
          <td><%= flight.airline %></td>
          <td><%= flight.airport %></td>
          <td><%= flight.flightNo %></td>
          <td><%= flight.departs %></td>
        </tr>   
    </tbody>
  </table>
</section>

<section class="show-page-part2">
    <h2> Destination Details</h2></section></br>
<table>
    <thead>
        <tr>
            <th>Destinations</th>
            <th>Arrival</th>
        </tr>
    </thead>
    <tbody>
        <% flight.destinations.forEach(function(d) { %>
            <tr>
                <td><%=d.airport%></td>
                <td><%=d.arrival%></td>
            </tr>
        <%})%>
             
    </tbody>
</table>
</section>

<section id="show-page-part3">

<h3>Add a Destination</h3></section></br>
<form method="POST" action="/flights/<%= flight._id %>/destinations">
  <label>Airport:
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SAN">SAN</option>
    </select>
  </label><br>

  <label>Arrival:
    <input type="datetime-local" name="arrival">
  </label><br>
  <input type="submit" value="Add Destination">
</form></br>

<section id="show-page-tickets">
  <h3>Tickets Information</h3>
  <a href="/flights/<%= flight._id %>/tickets/new">New Ticket</a>
  <table>
    <thead>
      <th> Seat Number</th>
      <th> Ticket Price</th>
    </thead>
    <tbody>
      <% tickets.forEach(function(t) { %>
        <tr>
            <td><%=t.seat%></td>
            <td><%=t.price%></td>
        </tr>
    <%});%>
    </tbody>
  </table>
  
</section>



<%- include('../partials/footer') %>